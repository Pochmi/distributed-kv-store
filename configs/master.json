{
    "node": {
        "id": "master-1",
        "role": "master",
        "host": "127.0.0.1",
        "port": 6380,
        "data_dir": "./data/master-1"
    },
    "replication": {
        "enabled": true,
        "sync_mode": "async",  // async: 异步复制, sync: 同步复制
        "replication_factor": 2,  // 复制因子
        "max_replication_lag": 1000,  // 最大复制延迟(ms)
        "slaves": [
            {
                "id": "slave-1",
                "host": "127.0.0.1",
                "port": 6381,
                "priority": 1
            },
            {
                "id": "slave-2", 
                "host": "127.0.0.1",
                "port": 6382,
                "priority": 2
            }
        ]
    },
    "network": {
        "max_connections": 1000,
        "timeout_ms": 5000,
        "heartbeat_interval_ms": 1000
    },
    "log": {
        "level": "INFO",
        "file": "./logs/master.log",
        "replication_log_dir": "./logs/replication"
    },
    "performance": {
        "batch_size": 100,
        "flush_interval_ms": 100
    }
}
